<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/banner_background"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/grid_item_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amazon_ember"
        android:text="Groceries &amp; Essentials"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_circle_bg"
        app:layout_constraintStart_toStartOf="@+id/grid_item_title"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_title"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_title"
        app:srcCompat="@drawable/cat_flour1" />
</androidx.constraintlayout.widget.ConstraintLayout>